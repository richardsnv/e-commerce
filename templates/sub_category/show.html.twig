{% extends 'base.html.twig' %}

{% block title %}SubCategory{% endblock %}

{% block body %}
<div class="container">

<h1>Afficher les details d'une sous categorie</h1>

    <table class="table table-hover table-inverse table-responsive">
        <tbody class="thead-inverse">
            <tr>
                <th>Id</th>
                <td>{{ sub_category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sub_category.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ sub_category.createdAt ? sub_category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sub_category_index') }}">back to list</a>

    <a href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}">edit</a>

    {{ include('sub_category/_delete_form.html.twig') }}
</div>
   
{% endblock %}
