{% extends 'base.html.twig' %}

{% block title %}
    Hello CategoryController!
{% endblock %}

{% block body %}
    <div class="container">
        <br>
            <br>
                <br>
                    <br>
                        <div class="col-md-10">

                            <table class="table table-striped table-inverse table-responsive">
                                <thead class="thead-inverse">
                                    <tr>
                                        <th>
                                            id
                                        </th>
                                        <th>
                                            Nom
                                        </th>
                                        <th>
                                            Action
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for category in categories %}
                                        <tr>
                                            <td scope="row">
                                                {{ category.id }}
                                            </td>
                                            <td>
                                                {{ category.name }}
                                            </td>
                                            <td>
                                                <a href="{{ path('app_category_update', {'id': category.id}) }}" class="btn btn-primary btn-sm" title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </a>

                                                <a onclick="return confirm('Voulez-vous vraiment supprimer cette categorie ?')" href="{{ path('app_category_delete', {'id': category.id}) }}" class="btn btn-danger btn-sm" title="Supprimer">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </td>

                                        </tr>
                                    {% else %}
                                        <i class="fa fa-paragraph" aria-hidden="true">
                                            Aucune categorie pour le moment
                                        </i>

                                    {% endfor %}
                                </tbody>
                            </table>
                            <a href="{{ path('app_category_new') }}" class="btn btn-outline-primary btn-sm">
                                Ajouter une categorie
                            </a>
                        </div>
                    </div>
                {% endblock %}
                